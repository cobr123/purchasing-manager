# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                   controllers.Application.index
POST    /                                                   controllers.Application.addPurchase

#purchases
GET     /purchase                                           controllers.Application.index
POST    /purchase                                           controllers.Application.addPurchase

#purchase card
GET     /purchase/$idPurchase<[0-9]+>                       controllers.Application.purchase(idPurchase: Long)
POST    /purchase/$idPurchase<[0-9]+>                       controllers.Application.addClient(idPurchase: Long)

#client card
GET     /client/$idClient<[0-9]+>                           controllers.Application.client(idClient: Long)
POST    /client/$idClient<[0-9]+>                           controllers.Application.addWare(idClient: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                       controllers.Assets.versioned(path="/public", file: Asset)